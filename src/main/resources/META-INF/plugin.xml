<idea-plugin>
    <id>com.github.jkjamies.cammp</id>
    <name>CAMMP</name>
    <vendor>jkjamies</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <group id="com.github.jkjamies.cammp.actions.cleanarchitectureGroup"
               text="Clean Architecture"
               description="Tools for Clean Architecture modules"
               popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <action id="com.github.jkjamies.cammp.actions.GenerateModulesAction"
                    class="com.github.jkjamies.cammp.feature.cleanarchitecture.actions.GenerateFeatureModulesAction"
                    text="Generate Clean Architecture Modules"
                    description="Create domain, data, di, and presentation modules with Gradle setup inside a named directory"/>

            <action id="com.github.jkjamies.cammp.actions.GeneratePresentationScreenAction"
                    class="com.github.jkjamies.cammp.feature.presentationgenerator.actions.GeneratePresentationScreenAction"
                    text="Generate Presentation Screen"
                    description="Create a presentation screen with optional navigation and state holders"/>

            <action id="com.github.jkjamies.cammp.actions.GenerateRepositoryAction"
                    class="com.github.jkjamies.cammp.feature.repositorygenerator.actions.GenerateRepositoryAction"
                    text="Generate Repository"
                    description="Create repository interface in domain and implementation in data module"/>

            <action id="com.github.jkjamies.cammp.actions.GenerateUseCaseAction"
                    class="com.github.jkjamies.cammp.feature.usecasegenerator.actions.GenerateUseCaseAction"
                    text="Generate Use Case"
                    description="Create a use case in the domain module"/>
        </group>
    </actions>
</idea-plugin>
